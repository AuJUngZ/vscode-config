{
  "workbench.iconTheme": "eq-material-theme-icons",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "git.autofetch": true,
  "emmet.showSuggestionsAsSnippets": true,
  "editor.stickyScroll.enabled": true,
  "window.experimental.windowControlsOverlay.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  //vim settings
  "vim.leader": "<space>", //set the <space> as the leader key
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [],
  "editor.fontSize": 16,
  "terminal.integrated.fontFamily": "Hack Nerd Font ",
  "editor.lineNumbers": "relative",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "workbench.colorCustomizations": {
    "[Material Theme Darker]": {},
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "files.autoSave": "afterDelay",
  "extensions.ignoreRecommendations": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "editor.inlayHints.enabled": "off",
  "editor.wordWrap": "off",
  "diffEditor.wordWrap": "off",
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": false,
  "window.commandCenter": true,
  "remote.SSH.remotePlatform": {
    "167.71.212.122": "linux",
    "ltc.cmonehealth.org": "linux",
    "scholar": "linux"
  },
  "workbench.colorTheme": "Material Theme DeepForest High Contrast",
  "githubPullRequests.pullBranch": "never",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdfxe",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ]
}
